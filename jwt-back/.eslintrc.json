{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "extends": "standard-with-typescript",
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": ["./tsconfig.json"]
  },
  "rules": {
    "semi": ["error", "always"],
    "comma-dangle": [
      "error",
      {
        "imports": "never",
        "arrays": "always",
        "objects": "always",
        "functions": "never",
        "exports": "always"
      }
    ],
    "@typescript-eslint/comma-dangle": [
      "error",
      {
        "imports": "never",
        "arrays": "always",
        "objects": "always",
        "functions": "never",
        "exports": "always"
      }
    ],
    "@typescript-eslint/semi": ["error", "always"],
    "space-before-function-paren": ["error", "never"],
    "@typescript-eslint/space-before-function-paren": ["error", "never"]
  }
}
